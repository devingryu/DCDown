<?xml version="1.0" encoding="utf-8"?>

<navigation xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph"
    app:startDestination="@id/hotlistFragment">

    <fragment
        android:id="@+id/hotlistFragment"
        android:name="com.ibd.dcdown.main.hotlistFragment"
        android:label="fragment_hotlist"
        tools:layout="@layout/fragment_hotlist" >

        <action
            android:id="@+id/action_hot_to_detail"
            app:destination="@id/detailFragment"
            app:exitAnim="@anim/fragment_fade_exit" />
    </fragment>
    <fragment
        android:id="@+id/newlistFragment"
        android:name="com.ibd.dcdown.main.newlistFragment"
        android:label="fragment_newlist"
        tools:layout="@layout/fragment_newlist" >
        <action
            android:id="@+id/action_new_to_detail"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.ibd.dcdown.detail.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >

        <argument
            android:name="index"
            app:argType="string" />
        <argument
            android:name="image"
            app:argType="string"
            android:defaultValue=""/>
    </fragment>
    <action
        android:id="@+id/action_global_hotlistFragment"
        app:destination="@+id/hotlistFragment"
        app:enterAnim="@anim/fragment_fade_enter"
        app:exitAnim="@anim/fragment_fade_exit"
        app:popUpTo="@+id/navigation_graph"
        app:popUpToInclusive="true" />
    <action
        android:id="@+id/action_global_newlistFragment"
        app:destination="@+id/newlistFragment"
        app:enterAnim="@anim/fragment_fade_enter"
        app:exitAnim="@anim/fragment_fade_exit"
        app:popUpTo="@+id/navigation_graph"
        app:popUpToInclusive="true" />
    <action
        android:id="@+id/action_global_detailFragment"
        app:destination="@+id/detailFragment" >
    </action>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.ibd.dcdown.main.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" />
    <action
        android:id="@+id/action_global_searchFragment"
        app:destination="@id/searchFragment" />

</navigation>